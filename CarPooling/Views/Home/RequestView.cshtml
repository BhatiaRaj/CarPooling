
@{
    ViewData["Title"] = "RequestView";
}

<div class="container" style="margin-top:20px;">
    <form>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>
                    User Name:
                </label>
                <input type="text" class="form-control" id="UserName" placeholder="User Name" readonly>
            </div>
            <div class="form-group col-md-6">
                <label>
                    PS No.
                </label>
                <input type="text" class="form-control" id="PsNo" placeholder="PS No." readonly>
            </div>
            <div class="form-group col-md-6">
                <label>
                    Pick Up Point:
                </label>
                <input type="text" class="form-control" id="PickUpPoint" placeholder="Pick Up Point" readonly>
            </div>
            <div class="form-group col-md-6">
                <label>
                    Mobile No:
                </label>
                <input type="number" class="form-control" id="MobNo" placeholder="Mobile No." readonly>
            </div>
            <div class="form-group col-md-6">
                <label>
                    Time
                </label>
                <input type="time" class="form-control" id="time" readonly>
            </div>
            <div class="form-group col-md-6">

            </div>
            @*<div class="form-group col-md-6">
                <button type="submit" class="btn btn-primary">Accept</button>
            </div>*@
            <div class="form-group">
                <button type="submit" class="btn btn-primary" id="AcceptReq">Accept</button>
                <button type="submit" class="btn btn-primary" id="RejectReq">Reject</button>
            </div>
        </div>
    </form>
</div>